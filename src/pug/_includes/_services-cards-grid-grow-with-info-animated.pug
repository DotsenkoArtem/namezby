      justify-content: flex-end
      width: 100%
      height: 100%
      top: 0
      right: 0
      bottom: 0
      left: 0
      z-index: 10
      opacity: 0
      transition: v.$transition-main
      background: rgba(5, 5, 5, 0.75)


  .services-grid__item:hover
    flex-grow: 1.4
    max-width: 50%
    box-shadow: 0 0px 2px 0 rgba(0, 0, 0, .35)
    .services-grid__item-img
      filter: blur(3px)
      transform: scale(1)
      transition: filter calc( v.$transition-main * .15 ) ease-out, transform calc( v.$transition-main * 1 ) ease-out
    .services-grid__item-info

      opacity: 1
      transition: opacity calc( v.$transition-main * 1 ) ease-out calc( v.$transition-main * .5 )
    .services-grid__item-title
      opacity: 1
      transform: translateX(0)
      transition: transform calc( v.$transition-main * .75 ) cubic-bezier(.4,1.09,.81,1.3) calc( v.$transition-main * 1 ), opacity calc( v.$transition-main * 2 ) ease-out calc( v.$transition-main * 1 )

    .services-grid__item-text
      opacity: 1
      transform: translateX(0)
      transition: transform calc( v.$transition-main * .75 ) cubic-bezier(.4,1.09,.81,1.3) calc( v.$transition-main * 1.1 ), opacity calc( v.$transition-main * 2 ) ease-out calc( v.$transition-main * 1 )

    .services-grid__item-btn
      padding: calc($btn-padding-y / 2) calc($btn-padding-y / 2)
      width: auto
      min-width: calc( 16px + $btn-padding-y )
      height: calc( 16px + $btn-padding-y )
      border-width: 1px
      opacity: 1
      transform: translateX(0)
      transition: transform calc( v.$transition-main * .75 ) cubic-bezier(.4,1.09,.81,1.3) calc( v.$transition-main * 1.2 ), opacity calc( v.$transition-main * 2 ) ease-out calc( v.$transition-main * 1 ), border-radius .2s, border-width 0s 0.01s, width 0s 0.01s, min-width 0s 0.01s, height 0s 0.01s, padding 0s 0.01s



  @media (hover:hover) and (pointer: fine)
    .services-grid
      &__item
        &-btn
          border-radius: 50%
          &>span
            max-width: 0

    .services-grid__item-btn:hover
      border-radius: .5rem
      &>span
