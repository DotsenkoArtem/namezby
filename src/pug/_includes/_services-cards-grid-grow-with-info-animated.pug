    &__item-img
      position: absolute
      width: 100%
      height: 100%
      top: 0
      right: 0
      bottom: 0
      left: 0
      z-index: 5
      transform: scale(1.15)
      img
        width: 100%
        height: 100%
        object-fit: cover
        object-position: center

