    .services-grid-wrap
      margin-inline: unset
      display: block
    .services-grid,
    .gallery
      --grid-item-m-inline: 1rem
      margin-inline: unset
      width: 100%
      &__item
        width: 100%
        height: 40rem  
        flex: none



  @media (max-width: 413.98px)
    .services-grid
      &__item
        margin-inline: auto
        max-width: 320px
        height: calc( 275 * $index ) 
